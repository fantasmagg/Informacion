
@{
    ViewData["Title"] = "Login";
}


  <div style="width:400px; height: 300px; margin: 0 auto; margin-top:5%;">

      <img style="width:100px;margin-left:150px; margin-bottom:40px;" src="https://cdn-icons-png.flaticon.com/512/149/149071.png?w=360">

   <form asp-controller="Secion" asp-action="validacion" >
                          <!-- Email input -->
                          <div class="form-outline mb-4">
                            <input type="text" id="form2Example1" name="Nombre" class="form-control" required/>
                            <label class="form-label" for="form2Example1">User Name</label>
                          </div>

                          <!-- Password input -->
                          <div class="form-outline mb-4">
                            <input type="password" id="form2Example2" name="Password" class="form-control" required/>
                            <label class="form-label" for="form2Example2">Password</label>
                          </div>

                          <!-- 2 column grid layout for inline styling -->
                          <div class="row mb-4">
                            <div class="col d-flex justify-content-center">
                              <!-- Checkbox -->
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                                <label class="form-check-label" for="form2Example31"> Remember me </label>
                              </div>
                            </div>

                            <div class="col">
                              <!-- Simple link -->
                              <a href="#!">Forgot password?</a>
                            </div>
                          </div>

                        <div style="margin-left:30%;">
                             <button type="submit" class="btn btn-primary btn-floating mx-1">
                              Login
                            </button>
                           <a class="btn btn-secondary" asp-action="Registrar">Registrar</a>
                        </div>
</form>

</div>
