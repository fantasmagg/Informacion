
@{
	ViewData["Title"] ="reporte";
}
<div style="margin-left:28%; margin-right:1%;">



<form asp-controller="Home" asp-action="reporte">

	<div id="details">
		<div class="container">
			<div class="row">
				<div class="col-md-8">
					<div class="card">
						<div class="card-header">
							<h4>Reporte</h4>
						</div>
						<div class="mb-3 mt-3">
							<input type="text" class="form-control" id="nombre" name="nombre" placeholder="Título del reporte" />
						</div>
						<div class="mb-3">
							<input type="email" class="form-control" id="email" name="email" placeholder="nombre@Ejmplo.com" />
						</div>
						<div class="mb-3">
							<textarea class="form-control" id="mensaje" name="mensaje" placeholder="Descripción del error" rows="3"></textarea>
						</div>
						<button type="submit" class="btn btn-secondary">Enviar</button>
					</div>
				</div>
			</div>
		</div>
	</div>
                
</form>

</div>